@model InventoryProject.Models.BillInfoModel

@{
    ViewData["Title"] = "BillDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>
<h4>BillInfo</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BillNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BillNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BillDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BillDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PurchasedBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PurchasedBy)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ApprovedBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ApprovedBy)
            </dd>
        </dl>
    </div>
    <div class="col-md-4">
        <dl>
            <dt class="col-md-6">
                Uploaded Bill Image
            </dt>
            <dd class="col-md-6">
                @Html.DisplayFor(model => model.BillName)
                <img class="lazyload" src="~/Images/@Model.BillName" data-orig-src="@("~/Images/"+Model.BillName)" asp-append-version="true" height="250" width="250" />
            </dd>
        </dl>
    </div>
</div>
<div>
    <a asp-action="BillEdit" asp-route-id="@Model.BillId">Edit</a> |
    <a asp-action="BillIndex">Back to List</a>
</div>